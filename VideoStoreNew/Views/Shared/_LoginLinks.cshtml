@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    //Signed in user    
<form asp-action="Logout" asp-controller="Account" method="post">
    @User.Identity.Name
    <input type="submit" value="Logout" class="navbar-btn btn btn-danger"/>
</form>
}
else
{
    //Anonymous User
    <a class="btn btn-xs btn-default navbar-btn" asp-action="Login" asp-controller="Account">Login</a>
    <a class="btn btn-xs btn-default navbar-btn" asp-action="Register" asp-controller="Account">Register</a>
}